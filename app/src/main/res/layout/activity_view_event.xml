<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ca.sfu.generiglesias.dutchie_meetly.ViewEventActivity"
    android:id="@+id/event_view_id_scrollView">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        >

        <TextView
            android:text="@string/event_view_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/event_view_id_name"
            android:textSize="40sp"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="@string/event_view_time_remaining"
            android:id="@+id/event_view_id_time_remaining"
            android:layout_below="@+id/event_view_id_name"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/event_view_date"
            android:id="@+id/event_view_id_date"
            android:layout_marginTop="56dp"
            android:layout_below="@+id/event_view_id_name"
            android:layout_alignParentStart="true"
            android:textSize="20sp" />


        <!--<TextView-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:id="@+id/event_view_id_description_textpane"-->
        <!--android:layout_alignEnd="@+id/event_view_id_name"-->
        <!--android:layout_centerVertical="true" />-->

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/event_view_location"
            android:id="@+id/event_view_id_location"
            android:textSize="20sp"
            android:layout_below="@+id/event_view_id_date"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/event_view_timeperiod"
            android:id="@+id/event_view_id_timeperiod"
            android:textSize="20dp"
            android:layout_alignTop="@+id/event_view_id_duration"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/event_view_duration"
            android:id="@+id/event_view_id_duration"
            android:textSize="20sp"
            android:layout_marginBottom="20dp"
            android:layout_below="@+id/event_view_id_location"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/event_view_description"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:id="@+id/event_view_id_description"
            android:textSize="20sp"
            android:layout_below="@+id/event_view_id_timeperiod"
            android:layout_alignParentStart="true"
            android:singleLine="false" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/event_view_see_map"
            android:id="@+id/button_viewmap"
            android:layout_below="@+id/event_view_id_description"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true" />

    </LinearLayout>
</ScrollView>
